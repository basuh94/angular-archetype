{
  "name": "angular-archetype",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": ">=20.19.0",
    "npm": ">=10"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "jest",
    "test:coverage": "jest --runInBand --coverage",
    "check": "npm run lint && npm run test:coverage && npm run build",
    "e2e": "sh ./scripts/run-e2e.sh",
    "e2e:ui": "playwright test --ui",
    "e2e:install": "playwright install chromium",
    "serve:ssr:angular-archetype": "node dist/angular-archetype/server/server.mjs",
    "lint": "ng lint",
    "lint:fix": "ng lint --fix",
    "format": "prettier --write .",
    "test:related": "sh ./scripts/test-related.sh",
    "prepare": "husky || exit 0",
    "precommit": "npx lint-staged && npm run test:related",
    "bundle:report": "node ./scripts/bundle-report.mjs",
    "bundle:report:build": "npm run build && npm run bundle:report",
    "security:audit": "sh ./scripts/security-audit.sh",
    "security:licenses": "sh ./scripts/security-licenses.sh",
    "security:check": "npm run security:audit && npm run security:licenses",
    "project:rename": "node ./scripts/rename-project.mjs"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "dependencies": {
    "@angular/common": "^20.3.16",
    "@angular/compiler": "^20.3.16",
    "@angular/core": "^20.3.16",
    "@angular/forms": "^20.3.16",
    "@angular/platform-browser": "^20.3.16",
    "@angular/platform-server": "^20.3.16",
    "@angular/router": "^20.3.16",
    "@angular/ssr": "^20.3.16",
    "express": "^5.1.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular-builders/jest": "20.0.0",
    "@angular/build": "^20.3.16",
    "@angular/cli": "^20.3.16",
    "@angular/compiler-cli": "^20.3.16",
    "@angular/platform-browser-dynamic": "^20.3.16",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@playwright/test": "^1.58.2",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.17.19",
    "angular-eslint": "21.0.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-preset-angular": "14.6.0",
    "license-checker": "^25.0.1",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "typescript": "~5.9.2",
    "typescript-eslint": "8.46.4"
  },
  "overrides": {
    "tar": "^7.5.9",
    "qs": "^6.15.0"
  },
  "lint-staged": {
    "*.{ts,html,scss,css,json,md}": [
      "prettier --write"
    ],
    "*.{ts,html}": [
      "eslint --fix --max-warnings=0"
    ]
  }
}
